---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/sections/Header.astro';
import Footer from '../../components/sections/Footer.astro';
import HeroSection from '../../components/sections/HeroSection.astro';
import Button from '../../components/ui/button/Button.astro';

const projects = (await getCollection('portfolio')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<html lang="en" data-theme="light" class="light">
	<head>
		<BaseHead title="Portfolio" description="Featured Projects" />
	</head>
	<body>
		<Header />
		<main>
			<HeroSection title="Featured Projects" subtitle="A collection of titles and interactive experiences I helped bring to life." />
			
            <section class="w-full py-10">
                <div class="mx-auto max-w-6xl px-4">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {projects.map((project) => (
                      <article class="card-surface p-6 relative flex flex-col h-full">
                        {project.data.icon && (
                            <div class="absolute right-4 top-4 text-[var(--accent)] [&>svg]:w-6 [&>svg]:h-6" set:html={project.data.icon} />
                        )}
                        <a href={`/portfolio/${project.id}/`} class="no-underline hover:text-[var(--accent)] transition-colors">
                            <h3 class="text-xl font-semibold text-foreground m-0 mb-2">{project.data.title}</h3>
                        </a>
                        <p class="text-sm text-[color:var(--color-text-muted)] m-0 mb-3">{project.data.techStack}</p>
                        <p class="text-[color:var(--color-text-secondary)] flex-grow">{project.data.description}</p>
                        <div class="mt-6 flex justify-center gap-4">
                            <Button href={`/portfolio/${project.id}/`} variant="secondary" size="sm">Details</Button>
                            {project.data.ctaLink && (
                                <Button href={project.data.ctaLink} variant="primary" size="sm">{project.data.ctaText || 'Visit'}</Button>
                            )}
                        </div>
                      </article>
                    ))}
                  </div>
                </div>
              </section>

		</main>
		<Footer />
	</body>
</html>

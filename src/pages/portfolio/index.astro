---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/sections/Header.astro';
import Footer from '../../components/sections/Footer.astro';
import HeroSection from '../../components/sections/HeroSection.astro';
import Button from '../../components/ui/button/Button.astro';
import Badge from '../../components/ui/badge/Badge.astro';

const projects = (await getCollection('portfolio')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<html lang="en" data-theme="light" class="light">
	<head>
		<BaseHead title="Portfolio" description="Featured Projects" />
	</head>
	<body>
		<Header />
		<main>
			<HeroSection title="Featured Projects" subtitle="A collection of titles and interactive experiences I helped bring to life." />
			
            <section class="w-full py-10">
                <div class="w-full mx-auto px-4">
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {projects.map((project) => (
                      <article class="card-surface p-4 flex flex-col gap-3 relative h-full">
                        {project.data.heroImage && (
                            <img width={640} height={360} src={project.data.heroImage.src} alt={project.data.title} class="rounded-lg object-cover w-full h-auto aspect-video mb-2" />
                        )}
                        {project.data.icon && !project.data.heroImage && (
                            <div class="absolute right-4 top-4 text-[var(--accent)] [&>svg]:w-6 [&>svg]:h-6" set:html={project.data.icon} />
                        )}
                        <h3 class="text-xl font-semibold text-[color:var(--color-text-primary)] m-0">{project.data.title}</h3>
                        <div class="flex flex-wrap gap-2 mb-2">
                            {project.data.techStack?.map((tech) => (
                                <Badge variant="outline" size="sm">{tech}</Badge>
                            ))}
                        </div>
                        <p class="text-[color:var(--color-text-secondary)] flex-grow text-sm">{project.data.description}</p>
                        <div class="mt-4 flex justify-center gap-4 relative z-10">
                             {/* z-10 needed because of stretched-link */}
                            <Button href={`/portfolio/${project.id}/`} variant="secondary" size="sm">Details</Button>
                            {project.data.ctaLink && (
                                <Button href={project.data.ctaLink} variant="primary" size="sm">{project.data.ctaText || 'Visit'}</Button>
                            )}
                        </div>
                        <a href={`/portfolio/${project.id}/`} class="stretched-link" aria-label={project.data.title}></a>
                      </article>
                    ))}
                  </div>
                </div>
              </section>

		</main>
		<Footer />
	</body>
</html>

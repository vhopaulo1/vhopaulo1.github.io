---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Button from '../components/ui/button/Button.astro';

type Props = CollectionEntry<'portfolio'>['data'];

const { title, description, pubDate, updatedDate, heroImage, techStack, ctaLink, ctaText } = Astro.props;
---

<html lang="en" data-theme="light" class="light">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			/* Align blog layout with site container to avoid right overflow and tight column */
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 100%;
				max-width: 960px; /* widen column */
				margin: auto;
				padding: 0.05em;
				color: var(--color-text-secondary);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				color: var(--color-text-primary);
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage.src} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
                        {techStack && <p class="text-lg text-muted-foreground mb-4">{techStack}</p>}
						<hr />
					</div>
					<div class="prose prose-lg dark:prose-invert max-w-none">
						<slot />
					</div>
                    {ctaLink && ctaText && (
                        <div class="mt-8 flex justify-center">
                            <Button href={ctaLink} variant="primary" size="lg">{ctaText}</Button>
                        </div>
                    )}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

---
import Carousel from '../ui/carousel/Carousel.astro';
import { logos } from '../../data/en/logos';
interface SkillItem {
  image: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  skills: SkillItem[];
}

const { title, skills } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto w-full max-w-none px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground pt-10 pb-10">{title}</h2>
    )}
  
    <!--
    <div class="mb-6">
      <Carousel tools={logos} />
    </div>
    -->

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-none mx-auto">
      {skills.map((skill) => (
        <div class="card-surface p-6 flex flex-col items-center text-center h-full group transition-transform duration-200 hover:-translate-y-1 hover:elevate-lg">
          <div class="mb-4 relative flex items-center justify-center w-16 h-16 rounded-2xl bg-[rgba(var(--accent-rgb),0.1)] text-[var(--accent)] group-hover:bg-[var(--accent)] group-hover:text-white transition-colors duration-300">
            <img 
              src={skill.image} 
              alt={skill.title} 
              class="w-10 h-10 object-contain transition-transform duration-300 group-hover:scale-110" 
            />
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-3">{skill.title}</h3>
          <p class="text-[color:var(--color-text-muted)] leading-relaxed text-sm">{skill.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>



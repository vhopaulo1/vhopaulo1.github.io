---
import Timeline from "../ui/timeline/Timeline.astro";
import { workIcons } from "../../data/en/work";

interface ExperienceItem {
  title: string;
  company: string;
  region: string;
  description: string;
  technologies?: string[];
}

interface Props {
  items: ExperienceItem[];
  title?: string;
}

const { items, title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto w-full max-w-none px-5 md:px-6">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-10 text-foreground pt-10 pb-10">{title}</h2>
    )}

    <Timeline items={items} icons={workIcons} centered={false}/>
  </div>
</section>


